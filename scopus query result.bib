keywords = {DBpedia,Hybrid recommender system,Implicit feedback,Learning to rank,Linked data,Top-N recommendations},
pages = {85--92},
title = {{Top-N recommendations from implicit feedback leveraging linked Open Data}},
year = {2013}
}
@inproceedings{Silva2013a,
abstract = {This paper presents a novel method of trust inference in social networks, entitled T-SWEETS. It aims to recommend trust relationships to users of a web-based social network. Furthermore, the paper presents its application at Konnen, a knowledge management platform based on social networks. T-SWEETS' main purpose is to act as an incentive to collaboration in social networks and, therefore, naturally increase the frequency of knowledge dissemination among the users. Thus, it provides background to other automated systems (e.g. recommender systems) and, consequently, improves the analysis and efficiency of the knowledge produced by users. {\textcopyright} 2013 IADIS.},
