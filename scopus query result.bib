@inproceedings{Mantas2019,
abstract = {The quality of recommendations on social networks is a combination of the richness of the available information and the ability of algorithms and architectures to take advantage of this information in favor of the users. Recommendation algorithms have to address several problems, such as information sparsity, scalability of algorithms, concept drift etc. ln this dynamic and complex environment, it is important to provide solutions that enrich information when it is necessary to fill the gaps and at the same time to scale solutions so that they can handle the ever increasing data sizes and flows. ln this work, we extend our previous work on recommender systems for social networks that studied global influence and trust metrics and their applications. More specifically, we introduce a local influence model, which is relied on the formation of local user networks based on common interests and study the performance of the new model, both stand-alone and in combination with the global one. Results show a promising improvement on the similarity between a target user and the users recommended based on the users selected to influence the recommendations for that target user.},
author = {Mantas, Nikolaos and Louta, Malamati and Eirinaki, Magdalini and Varlamis, Iraklis and Karetsos, George},
