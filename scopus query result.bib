@inproceedings{Ray2010,
abstract = {Trust-aware recommender systems are intelligent technology applications that make use of trust information and user personal data in social networks to provide personalized recommendations. Earlier research in trust-aware systems have shown that the ability of trust-based systems to make accurate predictions coupled with their robustness from shilling attacks make them a better alternative than traditional recommender systems. In this paper we propose an approach for improving accuracy of predictions in trust-aware recommender systems. In our approach, we first reconstruct the trust network. Trust network is reconstructed by removing trust links between users having correlation coefficient below a specified threshold value. For prediction calculation we compare three different approaches based on trust and correlation. We show through experiments on real life Epinions data set that our proposed approach of reconstructing the trust network gives substantially better prediction accuracy than the original approach of using all trust statements in the network. {\textcopyright} 2010 IEEE.},
author = {Ray, Sanjog and Mahanti, Ambuj},
booktitle = {Proceedings of the Annual Hawaii International Conference on System Sciences},
doi = {10.1109/HICSS.2010.225},
isbn = {9780769538693},
