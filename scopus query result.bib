@article{Chen2012,
abstract = {Collaborative Filtering is the most widely used recommendation technology in E-commerce recommender systems. It provides users with personalized services according to similarity of their preferences. However, traditional collaborative filtering algorithm faces severe challenge of sparse user ratings. Considering the connections among users, a novel trust-based collaborative filtering algorithm is designed. In the new approach, trust value is propagated in three kinds of recommendation strategy constraints through the trust web to match more neighbors for cold start users to produce recommendations. The method is effective in relieving the sparsity. Experiment shows that this method can effectively improve the recommendation quality. {\textcopyright} 2011 by Binary Information Press.},
