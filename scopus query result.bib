keywords = {Collaborative Filtering,Fuzzy Trust,Recommender System,Trust Network,Trust Propagation},
number = {PART 1},
pages = {433--440},
title = {{Incorporating fuzzy trust in collaborative filtering based recommender systems}},
volume = {7076 LNCS},
year = {2011}
}
