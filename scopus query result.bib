}
@article{Hess2008,
abstract = {Recommendation techniques that analyze social trust networks attracted much attention in the last few years. They recommend such items that are appreciated by trusted friends. In this paper, we explore how to use trust information for generating personalized document recommendations such as for scientific papers or for webpages. The basic idea is to jointly analyze a trust network between readers who review the documents and the reference network between the documents. We develop trust-enhanced visibility measures for measuring the quality and the importance of documents and evaluate them in simulation studies. {\textcopyright} 2008 - IOS Press and the authors.},
