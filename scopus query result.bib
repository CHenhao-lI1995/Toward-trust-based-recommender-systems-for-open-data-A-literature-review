journal = {Social Network Analysis and Mining},
keywords = {Collaborative filtering,Recommender systems,Social networks,Trust and distrust,Web personalization},
number = {1},
pages = {65--84},
title = {{Pruning trust–distrust network via reliability and risk estimates for quality recommendations}},
volume = {3},
year = {2013}
}
@inproceedings{Lorenzi2013,
abstract = {Recommender Systems deal with the challenge of obtaining customers feedback to improve their recommendations. Gathering information from users' social networks may help in the composition of the user feedback. This paper presents an implicit information gathering mechanism that collects useful information in the social networks to compose automatically the user evaluation. The composed evaluation helps the recommender systems to improve next recommendations. The proposed mechanism was validated with travel packages recommendations and experiments were done to illustrate how the implicit evaluation process may avoid the possibility of the user does not evaluate the received recommendations. The results corroborate the idea that implicit evaluations help recommender systems to increase the quality of recommendation provided by them.},
