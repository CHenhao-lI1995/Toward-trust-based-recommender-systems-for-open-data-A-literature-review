@inproceedings{Gallege2014,
abstract = {Unlike physical products, which have tangible features, software services are described using a functional specification and a time-variable set of features such as their QoS (Quality of Service) parameters. Due to the recent proliferation of rec-ommendation systems, it is tempting to apply these recommenders for selecting software services needed to create a dis-tributed application. As there are subtle differences (e.g., time sensitive features and periodic updates in the case of software services) between physical products and software services, care must be taken in applying any prevalent recommendation techniques to the domain of software services. Hence, this paper suggests an approach towards answering two critical questions - "are the prevalent product-based recommendation techniques suitable for recommending software services or not?" and "are the trust-based recommendations more suita-ble for online software services than the product-based recommendation techniques"? These two questions are addressed in the context of a software marketplace and the preliminary results are discussed in this paper. Copyright is held by the owner/author(s).},
author = {Gallege, Lahiru S. and Gamage, Dimuthu U. and Hill, James H. and Raje, Rajeev R.},
booktitle = {ACM International Conference Proceeding Series},
doi = {10.1145/2602087.2602118},
isbn = {9781450328128},
keywords = {Natural language processing,Recommendation,Sentiment analysis,Software service,Trust,User reviews},
pages = {61--64},
title = {{Towards trust-based recommender systems for online software services}},
year = {2014}
}
@article{Mehdi2014,
abstract = {We present a QoS-aware recommender approach based on probabilistic models to assist the selection of web services in open, distributed, and service-oriented environments. This approach allows consumers to maintain a trust model for each service provider they interact with, leading to the prediction of the most trustworthy service a consumer can interact with among a plethora of similar services. In this paper, we associate the trust in a service to its performance denoted by QoS ratings instigated by the amalgamation of various QoS metrics. Since the quality of a service is contingent, which renders its trustworthiness uncertain, we adopt a probabilistic approach for the prediction of the quality of a service based on the evaluation of past experiences (ratings) of each of its consumers. We represent the QoS ratings of services using different statistical distributions, namely multinomial Dirichlet, multinomial generalized Dirichlet, and multinomial Beta-Liouville. We leverage various machine learning techniques to compute the probabilities of each web service to belong to different quality classes. For instance, we use the Bayesian inference method to estimate the parameters of the aforementioned distributions, which presents a multidimensional probabilistic embodiment of the quality of the corresponding web services. We also employ a Bayesian network classifier with a Beta-Liouville prior to enable the classification of the QoS of composite services given the QoS of its constituents. We extend our approach to function in an online setting using the Voting EM algorithm that enables the estimation of the probabilities of the QoS after each interaction with a web service. Our experimental results demonstrate the effectiveness of the proposed approaches in modeling, classifying and incrementally learning the QoS ratings. {\textcopyright} 2014 Springer Science+Business Media New York.},
author = {Mehdi, Mohamad and Bouguila, Nizar and Bentahar, Jamal},
doi = {10.1007/s10489-014-0537-x},
issn = {0924669X},
journal = {Applied Intelligence},
keywords = {Bayesian network,Beta-Liouville,Dirichlet,Online learning,Trust,Web service},
number = {2},
pages = {503--524},
title = {{Probabilistic approach for QoS-aware recommender system for trustworthy web service selection}},
volume = {41},
year = {2014}
}
