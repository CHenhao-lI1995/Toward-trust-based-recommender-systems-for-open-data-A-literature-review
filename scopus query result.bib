title = {{A trust-semantic fusion-based recommendation approach for e-business applications}},
volume = {54},
year = {2012}
}
@article{Yao2012,
abstract = {Due to the rapid growth of the mobile users, a rich availability of services in pervasive environments has made the personalization and recommender systems come into spotlight. Traditional recommendation service can alleviate the "information overload", but the dynamic "context" may have much influence on customers when they decide to choose information products or service. In additionally, the monitoring of service quality is also a key to service recommendation. Trust mechanism is described as "central to all transactions" between actors in economics. By importing the context-dependent recommended service rules, and service reputation into the service filtering process, the objective of this paper is to build a secure personalized recommendation system. Evaluation results show that the service recommendation approach in this paper outperforms the traditional collaborative filtering. {\textcopyright} 2012 Praise Worthy Prize S.r.l. - All rights reserved.},
