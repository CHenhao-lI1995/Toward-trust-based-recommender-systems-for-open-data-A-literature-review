@book{Somboonviwat2016,
abstract = {User-based collaborative filtering (CF) is a widely used recommendation method that suggests items to users based on ratings of other users in the system. The performance of user-based CF can be degraded due to its inherent weaknesses, such as data sparsity and cold start problems. To address these weaknesses, many researchers have proposed to incorporate trust information into user-based CF. However, as reported in many recent works on trust aware recommendation, effectively exploiting trust in recommendation is not straightforward due to insufficient understanding of the relationship between trust and ratings. This paper empirically analyses real-world ratings data and their associated trust networks. Specifically, we focus our analysis on comparative characteristics of cold users vs. non-cold users. Our results show that the characteristics of cold users and non-cold users are significantly different.},
author = {Somboonviwat, Kulwadee and Aoyama, Hisayuki},
booktitle = {Lecture Notes in Computer Science (including subseries Lecture Notes in Artificial Intelligence and Lecture Notes in Bioinformatics)},
