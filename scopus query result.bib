@article{Chang2013,
abstract = {This study employs the perspective of social exchange theory and seeks to understand users' intentions to use social recommender systems (SRS) through three psychological factors: trust, shared values, and reputation. We use structural equation modeling to analyze 221 valid questionnaires. The results show that trust has a direct positive influence on the intention to use SRS, followed by shared values, whereas reputation has an indirect influence on SRS use. We further discuss specific recommendations concerning these factors for developing SRS. {\textcopyright} Mary Ann Liebert, Inc. 2013.},
