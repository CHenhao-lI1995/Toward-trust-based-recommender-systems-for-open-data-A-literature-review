title = {{A review of recommender system: From past to the future}},
volume = {8},
year = {2016}
}
@inproceedings{Tselenti2016,
abstract = {Information filtering and recommender systems exploit various techniques to deal with the information overload problem. One popular technique for making recommendations is based on trust statements between users in a social network. Yet explicit trust statements are usually very sparse leading to the need for expanding the trust networks by inferring new trust relationships. This study proposes a novel model to infer new trusted neighbors and combines it with existing methods to achieve a fully expanded trust network. Experimental results demonstrate that the proposed method outperforms the existing methods.},
author = {Tselenti, Panagiota and Danas, Konstantinos},
booktitle = {IISA 2016 - 7th International Conference on Information, Intelligence, Systems and Applications},
