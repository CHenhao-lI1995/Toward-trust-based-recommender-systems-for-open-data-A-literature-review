title = {{Sequence data enhancement method based on knowledge graph}},
year = {2019}
}
@article{Alnasser2020,
abstract = {An intelligent transportation system (ITS) is one of the main systems which have been developed to achieve safe traffic and efficient transportation. It enables the vehicles to establish connections with other road entities and infrastructure units using vehicle-to-everything (V2X) communications. As a consequence, all road entities become exposed to either internal or external attacks. Internal attacks cannot be detected by traditional security schemes. In this article, a recommendation-based trust model for V2X communications is proposed to defend against internal attacks. Four types of malicious attacks are analyzed. In addition, we conduct various experiments with different percentage of malicious nodes to measure the performance of the proposed model. In comparison with the existing model, the proposed model shows an improvement in network throughput and the detection rate for all types of considered malicious behaviors. Our model improves the packet dropping rate (PDR) with 36% when the percentage of malicious nodes is around 87.5%.},
author = {Alnasser, Aljawharah and Sun, Hongjian and Jiang, Jing},
doi = {10.1109/JIOT.2019.2950083},
issn = {23274662},
journal = {IEEE Internet of Things Journal},
keywords = {Attack,recommendation,trust,vehicle-to-everything (V2X)},
