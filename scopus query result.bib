keywords = {decision making,explanation,persuasion,recommendations acceptance,transparency,trust},
pages = {86--91},
title = {{Decision making and recommendation acceptance issues in recommender systems}},
volume = {7138 LNCS},
year = {2012}
}
@book{Nepal2012a,
abstract = {The growing popularity of Web based social networks has given rise to the need to build trust communities that inspire members to share their experiences, feelings and opinions in an open and honest way. In this paper, we propose a framework for building trust communities in social networks using social trust. We first introduce the concept of social trust and social capital, and describe the role they play in building trust communities. We then define a social trust model for social networks and the corresponding recommender system for building trust communities in social networks. The novel idea behind our social trust model is that we introduce the concept of engagement trust and combine it with popularity trust to derive a social trust of the community as well as of individual members in the community. {\textcopyright} 2012 Springer-Verlag.},
author = {Nepal, Surya and Sherchan, Wanita and Paris, Cecile},
booktitle = {Lecture Notes in Computer Science (including subseries Lecture Notes in Artificial Intelligence and Lecture Notes in Bioinformatics)},
