keywords = {Recommender systems,Semantic web},
pages = {193--198},
title = {{Hybrid model rating prediction with linked open data for recommender systems}},
volume = {475},
year = {2014}
}
@book{Peska2014,
abstract = {In this paper we describe approach of our SemWex1 group to the ESWC 2014 RecSys Challenge. Our method is based on using an adaptation of Content Boosted Matrix factorization [1], where objects are defined through their content-based features. Features were comprised of both direct DBPedia RDF triples and derived semantic information (with some WIE and NLP features). Total of seven DBPedia language editions were used to form the dataset. In the paper we will further describe our methods for semantic information creation, data filtration, algorithm details and settings as well as decisions made during the challenge and dead ends we explored.},
author = {Peska, Ladislav and Vojtas, Peter},
booktitle = {Communications in Computer and Information Science},
doi = {10.1007/978-3-319-12024-9_18},
