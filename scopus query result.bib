@inproceedings{Sansonetti2019,
abstract = {In this paper, we describe our research activities for integrating the recommendation process of nearby points of artistic and cultural interest (POIs) with related multimedia content. The recommendation engine exploits the potential offered by linked open data (LOD), by following semantic links in the LOD graph to identify movies, books, and music artists/songs related to that specific POI. This content is subsequently reranked based on the activity of the user and her friends on social media (i.e., Facebook), in order to provide personalized suggestions.},
