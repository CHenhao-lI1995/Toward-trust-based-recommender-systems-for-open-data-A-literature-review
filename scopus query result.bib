title = {{A survey of collaborative filtering-based recommender systems: from traditional methods to hybrid methods based on social networks}},
volume = {6},
year = {2018}
}
@inproceedings{Khan2018,
abstract = {Trust based recommendation systems are gaining popularity due to their ability to tackle problems like Data sparsity, Cold start, etc. Trust based collaborative filtering methods further regularize the user-specific feature vectors. In social rating networks, a user can label (add) other users as trusted friends to form a social network and this information can be used to significantly improve the performance of the existing recommender systems. This happens by the phenomenon that friends often influence each other in recommending items. We propose a trust based recommender system which uses a variant of genetic algorithms to learn the feature matrix by minimizing the associated loss function and extends TrustSVD which builds on top of a state of the art recommendation system, SVD++. Experimental results on the FilmTrust dataset shows that our approach outperforms TrustSVD in terms of the computational time of learning the model, which can greatly help in providing quick recommendations.},
