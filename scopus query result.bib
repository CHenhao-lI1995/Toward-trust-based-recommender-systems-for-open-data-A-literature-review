issn = {21507988},
journal = {International Journal of Computer Information Systems and Industrial Management Applications},
keywords = {Film,Group method of data handling,Neural network,Recommender system},
pages = {28--38},
title = {{A recommender system based on group method of data handling Neural Network}},
volume = {11},
year = {2019}
}
