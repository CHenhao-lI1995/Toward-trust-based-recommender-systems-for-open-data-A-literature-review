keywords = {Ratings,Recommender systems,Similarity,Trust metrics},
pages = {248--253},
title = {{From ratings to trust: An empirical study of implicit trust in recommender systems}},
year = {2014}
}
@inproceedings{Hong2014,
abstract = {Nowadays, due to the explosive growth of mobile devices, social networks and multimedia contents sharing systems have become increasingly popular. However, the characteristics of mobile devices and tags make it difficult to perform an accurate tag-based multimedia retrieval. In this paper, we propose a novel tag recommendation system for multimedia retrieval based on the user trust model which takes advantage of tag clusters of Flickr and visual similarity of multimedia. The proposed system makes it possible to provide the reliable and relevant tags to user in mobile environment. {\textcopyright} 2014 IEEE.},
