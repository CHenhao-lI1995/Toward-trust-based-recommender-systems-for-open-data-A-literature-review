@book{Ristoski2014,
abstract = {In this paper, we discuss the development of a hybrid multistrategy book recommendation system using Linked Open Data. Our approach builds on training individual base recommenders and using global popularity scores as generic recommenders. The results of the individual recommenders are combined using stacking regression and rank aggregation. We show that this approach delivers very good results in different recommendation settings and also allows for incorporating diversity of recommendations.},
author = {Ristoski, Petar and Menc{\'{i}}a, Eneldo Loza and Paulheim, Heiko},
