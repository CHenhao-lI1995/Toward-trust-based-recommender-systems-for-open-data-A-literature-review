}
@inproceedings{Gmach2015,
abstract = {This paper focuses on the state of the art of recommender systems. It presents various technical recommendations mentioned in the literature, primarily the basic content filtering, collaborative filtering and hybrid filtering. It comes to study different recommendation algorithms based on trust. The article also introduces the concept of trust in recommender systems. And it ends with a summary of the various existing approaches by developing the link between trust and recommender systems.},
